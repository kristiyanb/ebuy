@using EBuy.Web.Areas.Admin.Models.Categories
@model CategoryListModel

<h4>Categories Info: </h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Purchases
            </th>
            <th>
                Average Rating
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Purchases</td>
                <td>@category.AverageRating.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>