@model EBuy.Web.Areas.Admin.Models.Messages.MessageListModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="text-center">Admin Panel</h1>
<hr />

<h3 class="text-center mt-5">Welcome, @User.Identity.Name!</h3>
<a asp-area="Admin" asp-controller="Messages" asp-action="Pending">
    <h4 class="text-center btn-link text-success mt-5">
        You have @Model.Messages.Count new message@(Model.Messages.Count == 1 ? "." : "s.")
    </h4>
</a>
