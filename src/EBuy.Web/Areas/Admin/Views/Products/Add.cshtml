<div class="container col-4 text-center">
    <form method="post">
        <h4>Add New Product</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label>Category</label>
            @await Component.InvokeAsync("CategoryList")
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" type="number" id="price" name="price" />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" id="imageUrl" name="imageUrl" />
        </div>
        <div class="form-group">
            <label>In Stock</label>
            <input class="form-control" type="number" id="inStock" name="inStock" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" type="text" id="description" name="description"></textarea>
        </div>
        <button class="btn btn-danger mt-4" type="submit">Create</button>
    </form>
</div>