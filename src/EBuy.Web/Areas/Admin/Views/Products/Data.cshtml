@using EBuy.Web.Areas.Admin.Models.Products
@model ProductsListModel

<h4>Products Info: </h4>
<hr />

<h6 class="ml-2 mb-2">Show: </h6>
<div class="w-25 text-center">
    <vc:category-filter></vc:category-filter>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Rating
            </th>
            <th>
                In Stock
            </th>
            <th>
                Purchases
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Rating.ToString("F2")</td>
                <td>@product.InStock</td>
                <td>@product.PurchasesCount</td>
                <td>
                    <a class="btn-link text-danger mt-5" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                </td>
                <td>
                    <a class="btn-link text-danger mt-5" asp-area="Admin" asp-controller="Products" asp-action="Remove" asp-route-id="@product.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>