@using EBuy.Web.Areas.Admin.Models.Products
@model ProductDetailsModel

<div class="container col-4 text-center">
    <form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="post">
        <h4>Add New Product</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" type="text" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label>Category</label>
            @await Component.InvokeAsync("CategoryList")
        </div>
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" class="form-control" type="number" id="price" name="price" />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUrl" class="form-control" type="text" id="imageUrl" name="imageUrl" />
        </div>
        <div class="form-group">
            <label>In Stock</label>
            <input asp-for="InStock" class="form-control" type="number" id="inStock" name="inStock" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" type="text" id="description" name="description"></textarea>
        </div>
        <input asp-for="Id" hidden="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-danger mt-4" type="submit">Update</button>
    </form>
</div>