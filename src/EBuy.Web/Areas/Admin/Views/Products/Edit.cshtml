@using EBuy.Web.Areas.Admin.Models.Products
@model ProductEditModel

<div class="container col-6 text-center">
    <form asp-area="Admin" asp-controller="Products" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <h4>Edit Product</h4>
        <hr />
        <img src="@Model.ImageUrl" class="w-50"/>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" type="text" id="name" name="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Category</label>
            <vc:category-list></vc:category-list>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" class="form-control" type="number" id="price" name="price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <labal>Image</labal>
            <div class="custom-file mt-2">
                <input asp-for="Image" type="file" class="custom-file-input" id="image">
                <label class="custom-file-label" for="image">Choose file</label>
            </div>
        </div>
        <div class="form-group">
            <label>In Stock</label>
            <input asp-for="InStock" class="form-control" type="number" id="inStock" name="inStock" />
            <span asp-validation-for="InStock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" type="text" id="description" name="description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input asp-for="Id" hidden />
        <button class="btn btn-danger mt-4" type="submit">Update</button>
    </form>
    <div class="text-center mt-5">
        <h4>Edit Comments</h4>
        <hr />
        @foreach (var comment in Model.Comments)
        {
            <div class="d-flex justify-content-between">
                <div class="text-left w-75">
                    <h6 class="mt-3 word-wrap">
                        @comment.Content
                    </h6>
                    <h6 class="text-black-50">@comment.UserName</h6>
                </div>
                <div class="mt-4 mr-5">
                    <a asp-area="Admin" asp-controller="Products" asp-action="RemoveComment" asp-route-commentId="@comment.Id" class="btn-link text-danger">
                        Remove
                    </a>
                </div>
            </div>
            <hr />
        }
    </div>
</div>