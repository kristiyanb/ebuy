@using EBuy.Web.Models.Products
@model ProductsCarouselModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center">
    <div class="bd-example w-50 d-flex justify-content-center">
        <div id="carouselExampleCaptions" class="carousel slide text-dark" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Model.Products[0].ImageUrl" class="d-block w-100" height="480" alt="...">
                    <div class="text-center">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Products[0].Id">
                            <h4 class="btn-link text-dark">@Model.Products[0].Name</h4>
                        </a>
                        <br />
                        <div class="rating float-none">
                            @for (int j = 1; j <= 5; j++)
                            {
                                if (Model.Products[0].Rating >= j)
                                {
                                    <span class="fa fa-star checked" id="star@(j)"></span>
                                }
                                else if (j - Model.Products[0].Rating <= 0.5)
                                {
                                    <span class="fa fa-star checked" id="star@(j)"></span>
                                }
                                else
                                {
                                    <span class="fa fa-star" id="star@(j)"></span>
                                }
                            }
                        </div>
                        <br />
                        <h6>$@Model.Products[0].Price</h6>
                    </div>
                </div>
                @for (int i = 1; i < Model.Products.Count; i++)
                {
                    <div class="carousel-item">
                        <img src="@Model.Products[i].ImageUrl" class="d-block w-100" height="480" alt="...">
                        <div class="text-center">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Products[i].Id">
                                <h4 class="btn-link text-dark">@Model.Products[i].Name</h4>
                            </a>
                            <br />
                            <div class="rating float-none">
                                @for (int j = 1; j <= 5; j++)
                                {
                                    if (Model.Products[i].Rating >= j)
                                    {
                                        <span class="fa fa-star checked" id="star@(j)"></span>
                                    }
                                    else if (j - Model.Products[i].Rating <= 0.5)
                                    {
                                        <span class="fa fa-star checked" id="star@(j)"></span>
                                    }
                                    else
                                    {
                                        <span class="fa fa-star" id="star@(j)"></span>
                                    }
                                }
                            </div>
                            <br />
                            <h6>$@Model.Products[i].Price</h6>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>