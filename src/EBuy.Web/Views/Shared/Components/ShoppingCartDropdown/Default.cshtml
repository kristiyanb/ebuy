@model EBuy.Web.Models.ShoppingCart.ShoppingCartDropdownViewModel

<div class="dropdown">
    <button class="nav-link btn btn-link text-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Shopping Cart
    </button>
    <div id="shoppingCart" class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="dropdown-item">
            @foreach (var product in Model.Products)
            {
                var productName = product.Name.Length > 12 ? product.Name.Substring(0, 25) + "..." : product.Name; 
                <div id="shoppingCart-item" class="d-flex justify-content-between mt-1 text-center">
                    <img class="col-4" src="@product.ImageUrl" />
                    <div class="col-8">
                        <h6>@productName</h6>
                        <p>$@product.Price <span class="ml-3"> x</span> @product.Quantity</p>
                    </div>
                </div>
            }
            <hr />
            <div class="d-flex justify-content-between">
                <h5>
                    Total:
                </h5>
                <div>
                    $@Model.TotalCost
                </div>
            </div>
            <a class="btn btn-danger w-100 mt-2" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Buy</a>
        </div>
    </div>
</div>