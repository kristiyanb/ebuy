@using EBuy.Web.Models.ShoppingCart
@model ShoppingCartViewModel

<h3 class="text-center">Your items: </h3>
<hr />
<div class="container w-75">
    @foreach (var product in Model.Products)
    {
        <div id="shoppingCart-item" class="d-flex justify-content-between mt-1 p-3">
            <img width="200" height="150" src="@product.ImageUrl" />
            <div class="w-25">
                <h6>@product.Name</h6>
                <p>$@product.Price</p>
                <p>x @product.Quantity</p>
                <a class="btn-link text-danger mt-5" asp-area="" asp-controller="ShoppingCart" asp-action="Remove" asp-route-id="@product.Id">Remove</a>
            </div>
        </div>
    }
    <hr class="mt-3" />
    <div class="d-flex justify-content-between">
        <h5>
            Total:
        </h5>
        <div>
            $@Model.TotalCost
        </div>
    </div>
    <div class="text-center mt-2">
        <a class="btn btn-danger w-25 mt-2" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Checkout</a>
    </div>
</div>