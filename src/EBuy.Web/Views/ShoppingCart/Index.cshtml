@using EBuy.Web.Models.ShoppingCart
@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}


<div class="container w-75">
    @if (Model.Products.Count == 0)
    {
        <h4 class="text-center mt-5">Your shopping cart is empty.</h4>

        <div class="text-center text-dark mt-5">
            <a asp-area="" asp-controller="Home" asp-action="Index">Back to website</a>
        </div>
    }
    else
    {
        <h3 class="text-center">Your items: </h3>
        <hr />

        @foreach (var product in Model.Products)
        {
            <div id="shoppingCart-item" class="d-flex justify-content-between mt-1 p-3">
                <img width="200" height="150" src="@product.ImageUrl" />
                <div class="w-25">
                    <h6 class="mb-3">@product.Name</h6>
                    <p>Price: $@product.Price</p>
                    <p>Quantity: @product.Quantity</p>
                    <a class="btn-link text-danger mt-5" asp-area="" asp-controller="ShoppingCart" asp-action="Remove" asp-route-id="@product.Id">Remove</a>
                </div>
            </div>
        }

        <hr class="mt-3" />
        <div class="d-flex justify-content-between">
            <h5>
                Total:
            </h5>
            <div>
                $@Model.TotalCost
            </div>
        </div>
        <div class="text-center mt-2">
            <a class="btn btn-danger w-25 mt-2" asp-area="" asp-controller="Checkout" asp-action="Index">Checkout</a>
        </div>
    }
</div>